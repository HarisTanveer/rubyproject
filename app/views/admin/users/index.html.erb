<h3 class="text-center text-white mt-5">USERS</h3>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-4 mt-5">
      <div class="example-2 card">
        <% if user.avatar.attached? %>
          <div class="wrapper" style=" background: url(<%= url_for user.avatar %>) center/cover no-repeat;">
        <% else %>
          <div class="wrapper" style=" background: url(<%= asset_path("nouser.png") %>) center/cover no-repeat; color: black;">
        <% end %>
        <div class="data">
          <div class="content">
            <h1 class="title"><%= user.name %><p> <%= user.email %> </p></h1>
            <%= link_to "Show", user_show_path(user), class: "btn btn-primary" %>
            <%= link_to "Delete", admin_user_path(user.id), class: 'btn btn-danger', data: {confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_admin_user_path(user), class: 'btn btn-primary' %>
            <% if !user.admin? %>
              <%= link_to "Make admin", admin_user_make_admin_path(user), class: 'btn btn-primary' %>
            <% end %>
            <% if user.admin? && user != current_user %>
              <%= link_to "Remove admin", admin_user_make_admin_path(user), class: 'btn btn-danger' %>
            <% end %>
          </div>
        </div>
        </div>
        </div>
      </div>
  <% end %>
  </div>
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary mt-5 mb-5 col-2" %>
</div>