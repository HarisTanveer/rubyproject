<p id="notice"><%= notice %></p>
<section>
  <div style="background-color: white">
    <!--Header-->
    <div class="text-center">
      <h3 class="white-text mb-3 mt-3">Reviews</h3>
    </div>

    <table class="table ">
      <thead>
      <tr>
        <th>Description</th>
        <th>User</th>
        <th>Movie</th>
        <th>Status</th>
        <th>Rating</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.description %></td>
          <td><%= review.user_id %></td>
          <td><%= review.movie_id %></td>
          <td><%= review.status %></td>
          <td><%= review.rating %></td>
          <td><%= link_to 'Show', admin_review_url(review), class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_admin_review_path(review), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', admin_review_path(review), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>