<section class="form-dark">
  <%= devise_error_messages! %>
  <div class="card card-image">
  <%= form_for(resource, as: resource_name, url: user_confirmation_path, html: {method: :post}) do |f| %>
    <div class="text-center">
      <h3 class="white-text mb-3 mt-2 font-weight-bold">Resend Confirmation</h3>
    </div>
    <div class="form-group">
      <label for="Form-file" class="text-body mb-3 mt-2 font-weight-bold">Email</label>
      <%= f.email_field :email, id: "Form-file",autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), required: "" %>
    </div>

    <div class="row d-flex align-items-center mb-4">
      <div class="text-center mb-3 col-md-12">
        <%= f.submit "Resend confirmation instructions", class: "btn btn-success btn-block btn-rounded z-depth-1" %>
      </div>
    </div>
  <% end %>
    <div class="col-md-12">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
