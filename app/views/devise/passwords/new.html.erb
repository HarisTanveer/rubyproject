
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
  <section class="form-dark">
    <%= devise_error_messages! %>
    <div class="card card-image">
      <!--Header-->
      <div class="text-center">
        <h3 class="white-text mb-3 mt-2 font-weight-bold">Edit Password</h3>
      </div>
    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-block btn-rounded z-depth-1" %>
    </div>
    <% end %>

    <div class="col-md-12">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>