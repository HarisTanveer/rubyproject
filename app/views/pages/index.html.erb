<% content_for :top_content do %>
  <% if current_user == nil %>
    <div class="container" style="text-align:center; background-color: gray">
      <h1>Welcome to IMDB</h1>
      <p>Register to get started.</p>
      <p>
        <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary' %>
        <%= link_to 'Movies', movies_path, class: 'btn btn-primary' %>
      </p>
    </div>
  <% end %>
  <div class="container" id="homepage">
    <h3 class="text-center text-white">New Movies</h3>
    <div class="row flex-row flex-nowrap" id="new_movies">
      <% @movies.each do |movie| %>
        <div class="col-12 csol-sm-6 col-md-4 col-lg-4">
          <%= render partial: 'index', locals: {movie: movie} %>
        </div>
      <% end %>
    </div>
<!--    <span style="font-size: 50px; margin-left: 20px">&#8594;</span>-->
    <h3 class="text-center text-white">Action Movies</h3>
    <div class="row flex-row flex-nowrap" id="action_movies">
      <% @action.each do |movie| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <%= render partial: 'index', locals: {movie: movie} %>
        </div>
      <% end %>
    </div>
    <h3 class="text-center text-white">Thriller Movies</h3>
    <div class="row flex-row flex-nowrap" id="thriller_movies">
      <% @thriller.each do |movie| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <%= render partial: 'index', locals: {movie: movie} %>
        </div>
      <% end %>
    </div>
    <h3 class="text-center text-white">Comedy Movies</h3>
    <div class="row flex-row flex-nowrap mb-5" id="comedy_movies">
      <% @comedy.each do |movie| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <%= render partial: 'index', locals: {movie: movie} %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="container" id="homepage-2" style="display: none">
  <h3 class="text-center text-white" id="sr-heading">Search Result</h3>
  <div class="row flex-row flex-nowrap" id="Results-div"></div>
</div>
