<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'index', locals: {movie: movie} %>
    </div>
  <% end %>
</div>

<div class="container pagination justify-content-center">
  <%= paginate @movies, pagination_class: "pagination-sm" %>
</div>
<% if current_user.admin? %>
  <%= link_to 'New Movie', new_movie_path, class: "btn btn-primary mt-5 mb-5 col-lg-2 col-md-4 col-sm-6" %>
<% end %>
