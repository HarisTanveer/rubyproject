<p id="notice"><%= notice %></p>

<p>
  <strong>Avatar :</strong>
  <% if @actor.avatar.attached? %>
  <%= image_tag user_avatar(@actor, 50), class: "img-circle" %>
  <% end %>
</p>

<p>
  <strong>Name :</strong>
  <%= @actor.name %>
</p>

<p>
  <strong>Date of birth :</strong>
  <%= @actor.date_of_birth %>
</p>

<%= link_to 'Edit', edit_actor_path(@actor) %> |
<%= link_to 'Back', actors_path %>
