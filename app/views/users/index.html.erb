<h3 class="text-center text-white mt-5">USERS</h3>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-4">
      <div class="example-2 card">
        <div class="wrapper" style=" background: url(<%= url_for user.avatar %>) center/cover no-repeat;">
          <div class="data">
            <div class="content">
              <h1 class="title"><%=user.name %><p> <%= user.email %> </p></h1>
              <%= link_to "Delete", admin_destory_user_path(user.id), class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
     </div>
  <% end %>
 </div>

